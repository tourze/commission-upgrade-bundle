{% extends '@EasyAdmin/layout.html.twig' %}

{% block page_title %}升级成功{% endblock %}

{% block main %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card mt-4">
                    <div class="card-header bg-success text-white">
                        <h3 class="card-title">
                            <i class="fas fa-check-circle"></i> 升级成功
                        </h3>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-success" role="alert">
                            <h4 class="alert-heading">升级完成！</h4>
                            <p>分销员 <strong>#{{ distributor_id }}</strong> 已成功从 <strong>{{ previous_level }}</strong> 升级至 <strong>{{ new_level }}</strong></p>
                            <hr>
                            <p class="mb-0">升级时间：{{ upgrade_time }}</p>
                        </div>

                        {% if history_id is defined %}
                            <div class="mt-3">
                                <p>升级记录ID：#{{ history_id }}</p>
                            </div>
                        {% endif %}

                        <div class="mt-4">
                            <a href="{{ path('admin_manual_upgrade_check') }}" class="btn btn-primary">
                                <i class="fas fa-plus"></i> 继续检测其他用户
                            </a>
                            <a href="{{ ea_url().setController('Tourze\\\\CommissionUpgradeBundle\\\\Controller\\\\Admin\\\\DistributorLevelUpgradeHistoryCrudController').setAction('index') }}" class="btn btn-secondary">
                                <i class="fas fa-list"></i> 查看升级历史
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
