{% extends '@EasyAdmin/layout.html.twig' %}

{% block page_title %}检测结果{% endblock %}

{% block main %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-10 offset-md-1">
                <div class="card mt-4">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-clipboard-check"></i> 升级条件检测结果
                        </h3>
                    </div>
                    <div class="card-body">
                        {# Flash messages #}
                        {% for message in app.flashes('error') %}
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <i class="fas fa-exclamation-circle"></i> {{ message }}
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        {% endfor %}

                        {# 检测结果摘要 #}
                        <div class="alert alert-{{ can_upgrade ? 'success' : 'warning' }}" role="alert">
                            <h4 class="alert-heading">
                                {% if can_upgrade %}
                                    <i class="fas fa-check-circle"></i> 满足升级条件
                                {% else %}
                                    <i class="fas fa-times-circle"></i> 不满足升级条件
                                {% endif %}
                            </h4>
                            <p class="mb-0">{{ summary }}</p>
                        </div>

                        {# 分销员信息 #}
                        <h5>分销员信息</h5>
                        <table class="table table-bordered">
                            <tbody>
                                <tr>
                                    <th style="width: 200px;">分销员ID</th>
                                    <td>#{{ result_data.distributor_id }}</td>
                                </tr>
                                <tr>
                                    <th>当前等级</th>
                                    <td>{{ result_data.current_level_name }}</td>
                                </tr>
                                {% if can_upgrade %}
                                    <tr>
                                        <th>目标等级</th>
                                        <td class="text-success"><strong>{{ result_data.target_level_name }}</strong></td>
                                    </tr>
                                    <tr>
                                        <th>升级条件表达式</th>
                                        <td><code>{{ result_data.upgrade_expression }}</code></td>
                                    </tr>
                                {% endif %}
                            </tbody>
                        </table>

                        {# 检测数据 #}
                        {% if result_data.context is not empty %}
                            <h5 class="mt-4">检测数据</h5>
                            <table class="table table-striped table-sm">
                                <thead>
                                    <tr>
                                        <th>指标</th>
                                        <th>当前值</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for key, value in result_data.context %}
                                        <tr>
                                            <td>{{ key }}</td>
                                            <td>{{ value }}</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        {% endif %}

                        {# 操作按钮 #}
                        <div class="mt-4">
                            {% if can_upgrade %}
                                <form method="post" action="{{ path('admin_manual_upgrade_execute') }}" onsubmit="return confirm('确认要将分销员 #{{ result_data.distributor_id }} 从 {{ result_data.current_level_name }} 升级至 {{ result_data.target_level_name }} 吗？');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('manual_upgrade_execute') }}">
                                    <button type="submit" class="btn btn-success btn-lg">
                                        <i class="fas fa-arrow-up"></i> 确认升级
                                    </button>
                                    <a href="{{ path('admin_manual_upgrade_check') }}" class="btn btn-secondary btn-lg">
                                        <i class="fas fa-redo"></i> 重新检测
                                    </a>
                                </form>
                            {% else %}
                                <a href="{{ path('admin_manual_upgrade_check') }}" class="btn btn-primary btn-lg">
                                    <i class="fas fa-redo"></i> 重新检测
                                </a>
                            {% endif %}
                        </div>

                        {# 时间戳 #}
                        <div class="mt-4 text-muted">
                            <small>
                                <i class="fas fa-clock"></i> 检测时间：{{ result_data.check_time }}
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
